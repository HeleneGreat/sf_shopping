<section id="home">
    <h1 class="text-center">Bienvenue chez Animal Shopping</h1>
    <div class="row justify-content-center">
        {% for category in allCategories %}
        <article class="col-12 col-lg-4 card border-0 m-3" style="width: 18rem;">
            <div class="card-body text-center">
                <p class="m-0"><img class="card-img-top" src="{{ asset(category.image)}}" alt="Card image cap"></p>
                <h2 class="card-title">{{category.name}}</h2>
                <p class="mb-4"><img class="card-img-top" src="{{ asset(category.image)}}" alt="Card image cap"></p>
                <a href="{{ path('category_products', {catId:category.id}) }}" class="btn bg-pink text-white">Voir les animaux</a>
            </div>
        </article>
        {% endfor %}
    </div>
</section>





<section id="carousel" class="w-50 mx-auto mt-5">
  <div class="bd-example">
    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="{{imgCarousel[0].image}}" class="d-block rounded" alt="...">
          <div class="carousel-caption d-none d-md-block">
            <a href="{{ path('one_product', {productId:imgCarousel[0].id}) }}" class="btn bg-pink text-white px-3">{{imgCarousel[0].name}}</a>
          </div>
        </div>
        {% for i in 1..4 %}
        <div class="carousel-item">
          <img src="{{imgCarousel[i].image}}" class="d-block rounded" alt="...">
          <div class="carousel-caption d-none d-md-block">
            <a href="{{ path('one_product', {productId:imgCarousel[i].id}) }}" class="btn bg-pink text-white px-3">{{imgCarousel[i].name}}</a>
          </div>
        </div>
        {% endfor %}
      </div>
      <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
        <span><i class="fa-solid fa-chevron-left pink" aria-hidden="true"></i></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
        <span><i class="fa-solid fa-chevron-right pink" aria-hidden="true"></i></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</section>

